{
    "compilerOptions": {
      "outDir": "./dist",
      "declaration": false,
      "sourceMap": false,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "module": "commonjs",
      "target": "es6",
      "typeRoots": ["./node_modules/@types"],
      "lib": ["es2017"],
      "esModuleInterop": true,
      "types": ["node", "jest"]
    },
    "include": ["ExternalDependencies/src/**/*"],
    "exclude": ["node_modules", "dist"]
  }